<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GreetingTownTab"
        android:text="Escoja un pueblo!"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="28dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/towntabMessage"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/towntabMessage"
        android:text="@string/towntab_message"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/TownList"
        android:layout_marginBottom="40dp"/>

    <Spinner
        android:id="@+id/TownList"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/TownTabButton"
        android:layout_below="@+id/TownList"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:background="#D50000"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
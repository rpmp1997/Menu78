<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramonmedina.menu78.Map.MapRestaurantActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/imgMapRestaurant"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_card_view_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imgMapRestaurant"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/NameMapa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre: "
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombreMapa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dp"
                    android:layout_below="@+id/NameMapa" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_card_view_description"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/map_card_view_name"
                android:layout_marginTop="20dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/DescriptionMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descParraMapa"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/DescriptionMapa" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_card_view_localizacion"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/map_card_view_description"
                android:layout_marginTop="20dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/LocaclizacionMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descParraPueblo"
                    android:text="Localizacion: "
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locaMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_below="@+id/LocaclizacionMapa" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_card_view_category"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/map_card_view_localizacion"
                android:layout_marginTop="20dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/CategoriasMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorias: "
                    android:textColor="@android:color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cateMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_below="@+id/CategoriasMapa" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
